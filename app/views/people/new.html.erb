<h2>New person</h2>

  <%= form_for @person do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :age %>
      <%= f.number_field :age %>

      <%= f.label :hair_color %>
      <%= f.text_field :hair_color %>

      <%= f.label :race %>
      <%= f.text_field :race %>

    <%= f.submit %>
  <% end %>
